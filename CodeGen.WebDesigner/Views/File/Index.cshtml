@{
    ViewBag.Title = "Files";
}

<h2>Files</h2>

<br />




<script id="popup-editor" type="text/x-kendo-template">

    <div class="k-edit-form-container">

        <div class="k-edit-label">
            <label for="FileName">FileName:</label>
        </div>
        <div class="k-edit-field" data-container-for="FileName">
            <input name="FileName" class="k-input k-textbox">
        </div>

        <div class="k-edit-label">
            <label for="FileOutput">FileOutput</label>
        </div>
        <div class="k-edit-field" data-container-for="FileOutput">
            <textarea rows="15" cols="50" name="FileOutput" class="k-textbox">Textarea</textarea>
        </div>

    </div>
</script>




    <div id="FileGrid">
        <span id="SectionNotifyGridFile"></span>
        <div id="appendSectionNotifyGridFile" class="k-block"></div>
    </div>

    <script type="text/javascript" src="@Url.Content("/Scripts/Views/File/FileGrid.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/Views/Shared/GridPopNotifyUncompressed.js")"></script>








